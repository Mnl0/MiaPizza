        <TextBox x:Name="txt_nombre_c" IsEnabled="False" HorizontalAlignment="Left" Height="30" Margin="83,124,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="490" FontSize="16" MaxLength="50" MaxLines="1" VerticalContentAlignment="Center" BorderThickness="0,0,1,2">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
